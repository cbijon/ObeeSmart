extends ../node_modules/pug-bootstrap/_bootstrap

append body
	.container
		include navbar.pug
		.col-md-4
			h4 Creation Utilisateur
			form(action="/user/create", method="post", class="well")
				label(for="login")
					| Login
				input(type="text", name="login", placeholder='', required='', autofocus='', class="form-control")
				label(for="firstname")
					| Prénom
				input(type="text", name="firstname", placeholder='', required='', autofocus='', class="form-control")
				label(for="lastname")
					| Nom
				input(type="text", name="lastname", placeholder='', required='', autofocus='', class="form-control")
				label(for="username")
					| Email
				input(type='email', name="email", placeholder='', required='', autofocus='',class="form-control")
				label(for="password")
					| Password
				input(type="password", name="password", placeholder='', required='', autofocus='', class="form-control")
				label(for="password")
					| Retype password
				input(type="password", name="password_verif", placeholder='', required='', autofocus='', class="form-control")
				label(for="Tél pro")
					| Téléphone :
				input(type='text', name="contact_tel",  autofocus='',class="form-control")
				label(for="manager")
					| Manager
				select#manager(name='manager_id' size='1' , required='', autofocus='' , class="form-control")
					each manager in managers
						option(value=(manager.id)) #{manager.login}
				br
				label(for="group")
					| Groupe
				select#groupe(name='group_id' size='1' , required='', autofocus='' , class="form-control")
					each group in groups
						option(value=(group.id)) #{group.name}
				label(for="is_manager")
					| Compte Manager &nbsp;
					input(type='radio', name='is_manager', class="checkbox-inline", value="true")
					| &nbsp; Oui	
					input(type="radio", name="is_manager", class="checkbox-inline" value="false", checked="true")
					| &nbsp; Non
				br
				br
				label(for="is_admin")
					| Compte Admin &nbsp; 
					input(type="radio", name="is_admin", class="checkbox-inline", value="true")
					| &nbsp; Oui
					input(type="radio", name="is_admin", class="checkbox-inlinel", value="false", checked="true")
					| &nbsp; Non
				br
				br
				input(type="submit" class="btn btn-xs btn-success")

		.col-md-8
			h4 Utilisateurs
			.table-responsive
					table.table.table-striped
						thead
							tr
								th Noms
								th Prénoms
								th Emails
								th Managers
								th Admins
								th Editer
								th Active
								th Supprimer
						tbody
						each user in users
							tr
								td 
									= user.lastname
								td 
									= user.firstname
								td 
									= user.email
								td(align="center")
									if user.is_manager == true
										img(src="../images/manager.jpeg",height="20", width="20", alt="manager")
								td(align="center")
									if user.is_admin == true
										img(src="../images/admin.png",height="20", width="20", alt="admin")
								td 
									a(href="/users/" + user.id + "/edit", class="btn btn-xs btn-warning") Editer
								td
									if user.role == "enable"
										a(href="/users/" + user.id + "/disable", class="btn btn-xs btn-success") Disable
									else
										a(href="/users/" + user.id + "/enable", class="btn btn-xs btn-danger") Enable
								td 
									a(href="/users/" + user.id + "/destroy", class="btn btn-xs btn-danger") Supprimer

	include footer.pug