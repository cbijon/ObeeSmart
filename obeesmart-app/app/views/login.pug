extends ../node_modules/pug-bootstrap/_bootstrap

append styles
	// Custom styles for this template
	link(href='../css/signin.css' rel='stylesheet')
	//link(rel="stylesheet", href='../css/styles2.css')


block body
	.container
		header
			p.text-center 
				|
				| Connexion

		section#login-section
			form.form-signin(method='POST' action='/login')
				h2.form-signin-heading Please sign in
				label.sr-only(for='email') Email address
				input#email.form-control(name='email' type='email' placeholder='Email address' required='' autofocus='')
				label.sr-only(for='password') Password
				input#password.form-control(name='password' type='password' placeholder='Password' required='')
				.checkbox
					label
						input(type='checkbox' value='remember-me')
						|  Remember me
				button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
	
	include footer.pug