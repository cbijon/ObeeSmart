	link(rel="stylesheet", href='https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css')
	//link(rel="stylesheet", href='https://code.highcharts.com/css/highcharts.css')
	//link(rel="stylesheet", href='https://code.highcharts.com/dashboards/css/dashboards.css')
	link(rel="stylesheet", href='../css/styles2.css')

append scripts
	script(src='https://code.jquery.com/jquery-1.11.3.min.js')
	script(src='https://code.jquery.com/ui/1.11.3/jquery-ui.min.js')
	script(src='../js/bootstrap-datepicker.min.js')
	script(src='../locales/bootstrap-datepicker.fr.min.js')
	script(src="https://code.highcharts.com/dashboards/dashboards.js")
	//script(src="https://code.highcharts.com/highcharts.js")
	//script(src="https://code.highcharts.com/dashboards/modules/dashboards-plugin.js")

append body
	.container
		img(src="../images/bannierenoirenetwork.png", alt="Header Image", class="img-fluid")
		include navbar.pug
		.col-md-4
			h4 Creation groupe
			form(action="/groups/create", method="post", class="well")
				label(for="Nom du groupe")
					| Nom du groupe
				input(type="text", name="name", placeholder='', required='', autofocus='', class="form-control")
				br
				input(type="submit" class="btn btn-xs btn-success")
		.col-md-8
			h4 Groupes existants
			.table-responsive
					table.table.table-striped
						thead
							tr
								th Noms
								th Editer
								th Supprimer
						tbody
						each group in groups
							tr
								td 
									= group.name
								td 
									a(href="/groups/" + group.id + "/edit", class="btn btn-xs btn-warning") Editer
								td 
									a(href="/groups/" + group.id + "/destroy", class="btn btn-xs btn-danger") Supprimer
		
	include footer.pug